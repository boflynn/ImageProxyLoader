{
    "manifest_version": 2,

    "name": "Image Proxy Loader",
    "description": "Loads images from domains on a user-managed list through a proxy.",
    "version": "1.0",

    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_icon": "img/off38.png",
        "default_popup": "options.html"
    },

    "options_page": "options.html",

    "background": {
        "scripts": [ "background.js" ],
        "persistent": true
    }
}